                    <% if tweet.media_url != nil %>
                    <center><%= image_tag tweet.media_url, :size => "250x250", :class => "img-responsive" %></center>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
